{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "preLaunchTask": "Compile Server",
            "name": "Launch Server",
            "request": "launch",
            "env": {
                "environment": "local"
            },
            "program": "./server/whimsicalities-server/dist/src/server.js",
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "name": "Launch Client",
            "preLaunchTask": "npm: start",
            "cwd": "${workspaceFolder}/client/whimsicalities",
            "webRoot": "${workspaceFolder}/client/whimsicalities",
            "request": "launch",
            "url": "http://localhost:4200/"
        }
    ],
    "compounds": [
        {
            "name": "Run client and server locally with docker redis",
            "preLaunchTask": "compose-up-redis",
            "configurations": [
                "Launch Client",
                "Launch Server"
            ]
        },
        {
            "name": "Run server locally with docker redis",
            "preLaunchTask": "compose-up-redis",
            "configurations": [
                "Launch Server"
            ]
        }
    ]
}