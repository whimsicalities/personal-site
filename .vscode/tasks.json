{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Server",
            "type": "npm",
            "script": "compile",
            "path": "./server/whimsicalities-server",
        },
        {
            "type": "npm",
            "script": "start",
            "path": "/client/whimsicalities",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        }
    ]
}